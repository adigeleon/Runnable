<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="adigeleon.com.runnable.MainActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="133dp"
        android:layout_height="59dp"
        android:text="0"
        android:textColorLink="@android:color/background_dark"
        android:textSize="24sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.159"
        app:layout_constraintHorizontal_bias="0.501"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/baslabuttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="basla"
        android:text="basla"
        app:layout_constraintRight_toLeftOf="@+id/bititbuttn"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/textview" />

    <Button
        android:id="@+id/bititbuttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="bitir"
        android:text="bitir"
        android:layout_marginStart="72dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/baslabuttn"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textview" />

    <TextView
        android:id="@+id/toastxt"
        android:layout_width="165dp"
        android:layout_height="41dp"
        android:layout_marginBottom="137dp"
        android:layout_marginTop="138dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bititbuttn"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
